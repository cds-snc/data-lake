{
  "name": "data-lake",
  "image": "mcr.microsoft.com/devcontainers/base:bullseye@sha256:03e618ae2b25d068f292c99220b2b055007694d1e1ad7fac34b02d8060a7f504",
  "containerEnv": {
    "SHELL": "/bin/zsh"
  },
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.14"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.14.4",
      "terragrunt": "0.68.6"
    }
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y openjdk-17-jdk && export JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64",
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "github.copilot",
        "github.vscode-github-actions",
        "hashicorp.hcl",
        "redhat.vscode-yaml"
      ]
    }
  },
  "remoteUser": "vscode"
}