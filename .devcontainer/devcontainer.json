{
  "name": "data-lake",
  "image": "mcr.microsoft.com/devcontainers/base:bullseye@sha256:7916038fd9711a5ee6a76b3881c3fbe8e54999064e33c5de01c07d6786085f14",
  "containerEnv": {
    "SHELL": "/bin/zsh"
  },
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.14"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.14.1",
      "terragrunt": "0.68.6"
    }
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y openjdk-17-jdk && export JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64",
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "github.copilot",
        "github.vscode-github-actions",
        "hashicorp.hcl",
        "redhat.vscode-yaml"
      ]
    }
  },
  "remoteUser": "vscode"
}