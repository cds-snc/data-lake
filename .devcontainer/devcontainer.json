{
  "name": "data-lake",
  "image": "mcr.microsoft.com/devcontainers/base:bullseye@sha256:b387f798b9ee97144a126ba55ed92c8f2d3a8deceb8fe15e450645b307fee22a",
  "containerEnv": {
    "SHELL": "/bin/zsh"
  },
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.13"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.13.0",
      "terragrunt": "0.68.6"
    }
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y openjdk-17-jdk && export JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64",
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "github.copilot",
        "github.vscode-github-actions",
        "hashicorp.hcl",
        "redhat.vscode-yaml"
      ]
    }
  },
  "remoteUser": "vscode"
}